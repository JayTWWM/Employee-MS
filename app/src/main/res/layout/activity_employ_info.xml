<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rpur"
    android:id="@+id/employ_info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent1Info">

                <RelativeLayout
                    android:id="@+id/parentPicInfo"
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    android:scaleType="centerCrop">

                    <Button
                        android:id="@+id/BackButton"
                        android:layout_width="40dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/ic_keyboard_back"/>

                    <ImageView
                        android:id="@+id/ProfilePicInfo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/smart" />

                    <TextView
                        android:id="@+id/ProfileNameInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ProfilePicInfo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:textColor="#1b1b1b"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ProfileDesignationInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ProfileNameInfo"
                        android:layout_centerHorizontal="true"
                        android:textColor="#1b1b1b"
                        android:textSize="28sp" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:id="@+id/parent2Info"
                android:layout_below="@id/parent1Info">

                <RelativeLayout
                    android:id="@+id/Rating"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounder">

                    <TextView
                        android:id="@+id/RatingInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Performance rating:"
                        android:paddingLeft="16dp"
                        android:textSize="24sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#1b1b1b"
                        android:textStyle="bold"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar"
                        android:layout_below="@id/RatingInfo"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:padding="40dp"
                    android:id="@+id/ContactInfoInfo"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/DepartmentInfoInfo"
                    android:background="@drawable/rounder">

                    <TextView
                        android:id="@+id/informationInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Information:"
                        android:paddingLeft="16dp"
                        android:textSize="28sp"
                        android:textColor="#1b1b1b"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="16dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ProfileEmailInfo"
                        android:textColor="#1b1b1b"
                        android:layout_below="@id/informationInfo"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="16dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ProfileContactInfo"
                        android:layout_below="@id/ProfileEmailInfo"
                        android:textColor="#1b1b1b"
                        android:textSize="17sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/DepartmentInfoInfo"
                    android:padding="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Rating"
                    android:background="@drawable/rounder">

                    <TextView
                        android:id="@+id/DepartmentInformationInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department Information:"
                        android:paddingLeft="16dp"
                        android:textSize="24sp"
                        android:textColor="#1b1b1b"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="16dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ProfileInfoInfo"
                        android:textColor="#1b1b1b"
                        android:layout_below="@id/DepartmentInformationInfo"
                        android:textSize="20sp"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>